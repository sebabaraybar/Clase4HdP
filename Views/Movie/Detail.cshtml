@model Movie

<h2>@Model.Name</h2>
<h3>Duracion: @Model.Minutes mins.</h3>
<h3>Review: @Model.Review</h3>
<h3>@Model.Code</h3>
<form asp-controller="Movie" asp-action="Delete" method="post" asp-route-id="@Model.Code"
    onsubmit="return confirm('Are you sure to delete this movie?')">
    <button type="submit" class="btn btn-danger">Delete Movie</button>
</form>